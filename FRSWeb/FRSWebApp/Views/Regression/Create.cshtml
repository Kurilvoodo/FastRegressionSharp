@model FRSWebApp.Models.Regression.CreateRegressionVM
@using FRS.BLL.Interfaces
@using FRS.Ioc
@using Ninject
@{
    ViewBag.Title = "Create";
    var userService = NinjaDependencyResolver.Kernel.Get<IUserService>();
}

<h2>Create</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>CreateRegressionVM</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.XData, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.XData, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.XData, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.YData, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.YData, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.YData, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="hidden" name="userId" value="@userService.GetUserIdByUsername(User.Identity.Name)">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

